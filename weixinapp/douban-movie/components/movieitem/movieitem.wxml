<!--components/movieitem/movieitem.wxml-->
<view class="item">
	<view class="info">
		<image class="img" src="{{movie.images.large}}" />
		<view class="name">{{movie.title}}</view>
		<view class="score-wrapper">
			<!--star-->
			<ratingStar score="{{movie.numberStars}}"></ratingStar>
			<view class="score">{{movie.number.rating.average}}</view>
		</view>
	</view>
</view>

