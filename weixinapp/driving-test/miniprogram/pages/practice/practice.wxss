/* pages/practice/practice.wxss */
@import '../../style/iconfont.wxss';
van-tabs {
  margin-top: 20rpx;
}
.switch {
  display: flex;
  justify-content: space-between;
  margin: 20rpx 50rpx;
  text-align: center;
  line-height: 60rpx;
}
.switch .pre {
  width: 140rpx;
  height: 60rpx;
  background-color: #2a82e4;
  color: white;
  border: 1prx solid #2a82e4;
  border-radius: 10rpx;
}
.switch .next {  
  width: 140rpx;
  height: 60rpx;
  background-color: #2a82e4;
  color: white;
  border: 1prx solid #2a82e4;
  border-radius: 10rpx;
}
.menu {
  width: 100%;
  height: 70rpx;
  position: fixed;
  display: flex;
  justify-content: space-between;
  bottom: 0;
  line-height: 70rpx;
  text-align: center;
}
.menu .star {
  width: 80rpx;
  font-size: 38rpx;
}
.menu .all {
  width: 80rpx;
  font-size: 40rpx;
}
.container {
  height: 600rpx;
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
  flex-direction: row;
}
.questionSeq {
  flex: 0 0 calc(12% - 2px);
  margin: 6px 1%;
  line-height: 0;
  height: 0;
  padding: calc(6% - 1px) 0;

  color: #fff;
  background-color: #999999;
  border-radius: 50%;
  text-align: center;
  font-size: 14px;
  border: 1px #999999 solid;
}


