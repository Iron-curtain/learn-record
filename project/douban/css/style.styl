body
    margin 0
    padding 0
    font-size 12px
    line-height 1.62
.gray-mode
    margin-top 30px
    #anony-nav
        width 1080px
        margin 0 auto
        margin-bottom 25px
        h1
            display inline-block
            width 160px
            height 34px
            margin 0 20px 0 0
            background url("https://img3.doubanio.com/f/sns/19886d443852bee48de2ed91f4a3bdfdaf8c809c/pics/nav/logo_db.png") no-repeat 0 0
            vertical-align middle
            a
                display block
                height 34px
                font-size 12px
        .anony-srh
            position relative
            display inline-block
            width 270px
            height 30px
            border 1px solid #c3c3c3
            vertical-align middle
            form
                border 0
                .inp
                    display block
                    height 30px
                    overflow hidden
                    input 
                        width 240px
                        height 20px
                        padding 5px
                        margin-right 3px
                        border none 
                        vertical-align middle
                        font-size 13px
                        outline none 
                .bn
                    position absolute
                    right 0
                    top 0
                    width 30px
                    height 30px
                    border none 
                    background url("https://img3.doubanio.com/f/sns/f71f15922ebd7c0ff0ea0e7a25577529efd8981a/pics/icon/bn_srh_1.png") no-repeat 50% 50%
                    overflow hidden
                    cursor pointer
                    input
                        height 30px
                        width 30px
                        background: transparent
                        border 0
                        color transparent
                        cursor pointer
        .anony-nav-links
            float right
            margin-top 6px
            vertical-align middle
            ul
                list-style none 
                li
                    display inline-block
                    margin 0 14px 0 0
                    overflow hidden
                    a
                        display inline-block
                        width 40px
                        
                        

